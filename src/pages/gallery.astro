---
import Layout from "../layouts/Layout.astro";

// Placeholder data for photography
// TODO: Replace with your actual photography
const galleryItems = [
  {
    title: "Urban Shadows",
    description: "Street photography in Tokyo",
    image:
      "https://images.unsplash.com/photo-1478760329108-5c3ed9d495a0?auto=format&fit=crop&w=800&q=80",
    category: "Street",
  },
  {
    title: "Misty Mountains",
    description: "Early morning in the Alps",
    image:
      "https://images.unsplash.com/photo-1464822759023-fed622ff2c3b?auto=format&fit=crop&w=800&q=80",
    category: "Nature",
  },
  {
    title: "Golden Hour",
    description: "Sunset by the coast",
    image:
      "https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=800&q=80",
    category: "Landscape",
  },
  {
    title: "City Lights",
    description: "Night time cityscape",
    image:
      "https://images.unsplash.com/photo-1519501025264-65ba15a82390?auto=format&fit=crop&w=800&q=80",
    category: "Urban",
  },
  {
    title: "Portrait Study",
    description: "Studio lighting experiment",
    image:
      "https://images.unsplash.com/photo-1531746020798-e6953c6e8e04?auto=format&fit=crop&w=800&q=80",
    category: "Portrait",
  },
  {
    title: "Minimal Architecture",
    description: "Clean lines and geometry",
    image:
      "https://images.unsplash.com/photo-1486325212027-8081e485255e?auto=format&fit=crop&w=800&q=80",
    category: "Architecture",
  },
];

const categories = ["All", "Street", "Nature", "Portrait", "Architecture"];
---

<Layout title="Gallery | Taige's Blog">
  <!-- Header -->
  <section class="pt-24 pb-12 px-6">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-3xl md:text-5xl font-bold mb-6 text-gray-900">Gallery</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Capturing moments, light, and stories. A collection of my photography.
      </p>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="pb-24 px-6">
    <div class="max-w-6xl mx-auto">
      <!-- Filters (Visual only for now) -->
      <div class="flex flex-wrap justify-center gap-6 mb-12">
        {
          categories.map((cat) => (
            <button
              class={`text-sm font-medium transition-colors ${cat === "All" ? "text-gray-900 border-b-2 border-gray-900" : "text-gray-500 hover:text-gray-900"}`}
            >
              {cat}
            </button>
          ))
        }
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          galleryItems.map((item) => (
            <div class="group cursor-pointer">
              <div class="aspect-[4/3] overflow-hidden rounded-lg bg-gray-100 mb-4">
                <img
                  src={item.image}
                  alt={item.title}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                />
              </div>
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-lg font-bold text-gray-900 group-hover:text-orange-600 transition-colors">
                    {item.title}
                  </h3>
                  <p class="text-sm text-gray-500">{item.description}</p>
                </div>
                <span class="text-xs font-medium text-gray-400 uppercase tracking-wider mt-1">
                  {item.category}
                </span>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
