---
import Layout from "../layouts/Layout.astro";

const experience = [
  {
    company: "Some Food Delivery Inc.",
    role: "Software Engineer",
    period: "2023 - Present",
  },
  {
    company: "Some E-commerce Inc.",
    role: "Android Developer",
    period: "2020 - 2021",
  },
];

const education = [
  {
    school: "Rice University",
    degree: "Computer Science",
    period: "2021 - 2022",
  },
  {
    school: "Wuhan University",
    degree: "Information Security",
    period: "2016 - 2020",
  },
];

const skills = {
  languages: ["Kotlin", "Java", "Python", "JavaScript", "TypeScript"],
  backend: [
    "gRPC",
    "SpringBoot",
    "Cassandra",
    "PostgreSQL",
    "CockroachDB",
    "Snowflake",
    "ElasticSearch",
    "Redis",
    "Kafka",
    "Flink",
    "Airflow/Cadence",
    "Prometheus/PromQL",
    "ArgoCD",
  ],
  frontend: [
    "HTML/CSS",
    "React",
    "Jest",
    "Rush",
    "NextJS",
    "Android",
    "Jetpack Framework",
  ],
};
---

<Layout title="About | Taige's Blog">
  <!-- Hero Section -->
  <section class="pt-24 pb-12 px-6">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-gray-900">
        Taige Zhang
      </h1>
      <div class="text-xl text-gray-600 mb-8">
        <p class="mb-4">
          Software Engineer based in New York, specializing in high-performance
          backend systems, distributed architectures, and full-stack
          development.
        </p>
        <div class="flex flex-wrap gap-4 text-sm text-gray-500">
          <a
            href="mailto:ztgniklas@gmail.com"
            class="hover:text-orange-600 transition-colors flex items-center gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            ztgniklas@gmail.com
          </a>
          <a
            href="#"
            class="hover:text-orange-600 transition-colors flex items-center gap-2"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-4 w-4"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
              ></path>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>

  <section class="pb-24 px-6">
    <div class="max-w-2xl mx-auto space-y-8">
      <!-- Work Card -->
      <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
        <div class="flex items-center gap-3 mb-8">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-gray-900"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
          <h2 class="text-xl font-bold text-gray-900">Work</h2>
        </div>

        <div class="space-y-8">
          {
            experience.map((job) => (
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-full bg-gray-50 border border-gray-100 flex items-center justify-center flex-shrink-0">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-gray-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                    />
                  </svg>
                </div>
                <div class="flex-grow min-w-0">
                  <h3 class="text-base font-semibold text-gray-900 truncate">
                    {job.company}
                  </h3>
                  <p class="text-sm text-gray-500 truncate">{job.role}</p>
                </div>
                <div class="text-sm text-gray-400 flex-shrink-0">
                  {job.period}
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Education Card -->
      <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
        <div class="flex items-center gap-3 mb-8">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-gray-900"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path d="M12 14l9-5-9-5-9 5 9 5z"></path>
            <path
              d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
            ></path>
          </svg>
          <h2 class="text-xl font-bold text-gray-900">Education</h2>
        </div>

        <div class="space-y-8">
          {
            education.map((edu) => (
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-full bg-gray-50 border border-gray-100 flex items-center justify-center flex-shrink-0">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-6 w-6 text-gray-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="1.5"
                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                    />
                  </svg>
                </div>
                <div class="flex-grow min-w-0">
                  <h3 class="text-base font-semibold text-gray-900 truncate">
                    {edu.school}
                  </h3>
                  <p class="text-sm text-gray-500 truncate">{edu.degree}</p>
                </div>
                <div class="text-sm text-gray-400 flex-shrink-0">
                  {edu.period}
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Skills Section (Simplified) -->
      <div class="bg-white rounded-2xl p-8 border border-gray-100 shadow-sm">
        <div class="flex items-center gap-3 mb-8">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-gray-900"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <h2 class="text-xl font-bold text-gray-900">Skills</h2>
        </div>

        <div class="space-y-6">
          <div>
            <h3
              class="text-sm font-medium text-gray-500 mb-3 uppercase tracking-wider"
            >
              Languages
            </h3>
            <div class="flex flex-wrap gap-2">
              {
                skills.languages.map((skill) => (
                  <span class="px-3 py-1 text-sm bg-gray-50 text-gray-700 rounded-md border border-gray-100">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
          <div>
            <h3
              class="text-sm font-medium text-gray-500 mb-3 uppercase tracking-wider"
            >
              Backend & Ops
            </h3>
            <div class="flex flex-wrap gap-2">
              {
                skills.backend.map((skill) => (
                  <span class="px-3 py-1 text-sm bg-gray-50 text-gray-700 rounded-md border border-gray-100">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
          <div>
            <h3
              class="text-sm font-medium text-gray-500 mb-3 uppercase tracking-wider"
            >
              Frontend
            </h3>
            <div class="flex flex-wrap gap-2">
              {
                skills.frontend.map((skill) => (
                  <span class="px-3 py-1 text-sm bg-gray-50 text-gray-700 rounded-md border border-gray-100">
                    {skill}
                  </span>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
