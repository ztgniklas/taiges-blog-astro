---
import Layout from '../layouts/Layout.astro';
import PostCard from '../components/blog/PostCard.astro';

// TODO: Replace with actual blog post fetching
const featuredPosts = [
  {
    title: "Getting Started with Astro",
    description: "Learn how to build a modern blog with Astro, React, and TypeScript",
    pubDate: new Date("2024-03-20"),
    heroImage: "/assets/images/blog/getting-started/hero.jpg",
    category: "Development",
    tags: ["astro", "react", "typescript", "tutorial"],
    author: "Taige Wilson",
    slug: "getting-started-with-astro"
  },
  {
    title: "The Art of Minimal UI Design",
    description: "How less can be more: principles and practices for creating beautiful minimal interfaces",
    pubDate: new Date("2024-03-18"),
    heroImage: "/assets/images/blog/minimal-ui/hero.jpg",
    category: "Design",
    tags: ["design", "ui", "minimalism"],
    author: "Taige Wilson",
    slug: "art-of-minimal-ui-design"
  }
];
---

<Layout title="Home | Taige's Blog">
  <!-- Hero Section -->
  <section class="pt-32 pb-16">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-5xl md:text-6xl font-bold mb-6">
          <span class="bg-gradient-to-r from-pink-400 to-orange-300 bg-clip-text text-transparent">
            Welcome to My Blog
          </span>
        </h1>
        <p class="text-xl text-gray-300 mb-8">
          A space for sharing thoughts on design, technology, and creativity. Join me on this journey of exploration and learning.
        </p>
        <div class="flex gap-4">
          <a
            href="/blogs"
            class="px-6 py-3 bg-gradient-to-r from-pink-500 to-orange-400 text-white rounded-lg hover:opacity-90 transition-opacity"
          >
            Read Blog
          </a>
          <a
            href="/about"
            class="px-6 py-3 bg-black/30 border border-white/10 text-white rounded-lg hover:bg-white/5 transition-colors"
          >
            About Me
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Posts -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8">Featured Posts</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {featuredPosts.map(post => (
          <PostCard post={post} />
        ))}
      </div>
    </div>
  </section>

  <!-- Categories -->
  <section class="py-16 bg-black/30 backdrop-blur-lg">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-8">Explore Categories</h2>
      <div class="grid md:grid-cols-4 gap-6">
        <a
          href="/blogs?category=technology"
          class="group p-6 bg-black/30 border border-white/10 rounded-lg hover:border-pink-500/50 transition-colors"
        >
          <div class="w-12 h-12 bg-pink-500/10 rounded-lg flex items-center justify-center mb-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-pink-400 transition-colors">
            Technology
          </h3>
          <p class="text-gray-400">
            Latest trends and insights in the world of technology
          </p>
        </a>

        <a
          href="/blogs?category=design"
          class="group p-6 bg-black/30 border border-white/10 rounded-lg hover:border-pink-500/50 transition-colors"
        >
          <div class="w-12 h-12 bg-pink-500/10 rounded-lg flex items-center justify-center mb-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"
              />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-pink-400 transition-colors">
            Design
          </h3>
          <p class="text-gray-400">
            UI/UX design principles and creative inspiration
          </p>
        </a>

        <a
          href="/blogs?category=tutorials"
          class="group p-6 bg-black/30 border border-white/10 rounded-lg hover:border-pink-500/50 transition-colors"
        >
          <div class="w-12 h-12 bg-pink-500/10 rounded-lg flex items-center justify-center mb-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
              />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-pink-400 transition-colors">
            Tutorials
          </h3>
          <p class="text-gray-400">
            Step-by-step guides and how-to articles
          </p>
        </a>

        <a
          href="/blogs?category=personal"
          class="group p-6 bg-black/30 border border-white/10 rounded-lg hover:border-pink-500/50 transition-colors"
        >
          <div class="w-12 h-12 bg-pink-500/10 rounded-lg flex items-center justify-center mb-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-6 w-6 text-pink-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-pink-400 transition-colors">
            Personal
          </h3>
          <p class="text-gray-400">
            Personal experiences and life lessons
          </p>
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
        <p class="text-gray-300 mb-8">
          Subscribe to my newsletter to receive updates on new posts, tutorials, and design resources.
        </p>
        <form class="flex gap-4">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 bg-black/30 border border-white/10 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-pink-500"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-gradient-to-r from-pink-500 to-orange-400 text-white rounded-lg hover:opacity-90 transition-opacity"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
